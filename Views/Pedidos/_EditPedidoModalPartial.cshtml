@model RyujinBites.Models.Lanchonete.Pedido

@{
    Layout = null;
}

<form id="editPedidoForm" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="PedidoId" />

    <div class="form-group">
        <label asp-for="ClienteId" class="control-label">Cliente</label>
        <select asp-for="ClienteId" class="form-control" asp-items="ViewBag.ClienteId">
            <option value="">-- Selecione o Cliente --</option>
        </select>
        <span asp-validation-for="ClienteId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DataPedido" class="control-label"></label>
        <input asp-for="DataPedido" class="form-control" type="datetime-local" />
        <span asp-validation-for="DataPedido" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="StatusPedido" class="control-label"></label>
        <select asp-for="StatusPedido" class="form-control" asp-items="ViewBag.StatusOptions">
            <option value="">-- Selecione o Status --</option>
        </select>
        <span asp-validation-for="StatusPedido" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ValorTotal" class="control-label"></label>
        <p class="form-control-plaintext">@Model.ValorTotal.ToString("C")</p>
        <input type="hidden" asp-for="ValorTotal" />
    </div>

    <div class="form-group">
        <label asp-for="TipoEntrega" class="control-label"></label>
        <input asp-for="TipoEntrega" class="form-control" />
        <span asp-validation-for="TipoEntrega" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EnderecoEntrega" class="control-label"></label>
        <input asp-for="EnderecoEntrega" class="form-control" />
        <span asp-validation-for="EnderecoEntrega" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Observacoes" class="control-label"></label>
        <textarea asp-for="Observacoes" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Observacoes" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CupomId" class="control-label"></label>
        <select asp-for="CupomId" class="form-control" asp-items="ViewBag.CupomId">
            <option value="">-- Sem Cupom --</option>
        </select>
        <span asp-validation-for="CupomId" class="text-danger"></span>
    </div>

    <br />
    <div class="form-group">
        <input type="submit" value="Salvar" class="btn btn-primary" />
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}